mixin mortgage_section()
    .mortgage_section
        .section_inner
            .section_title Ипотечный калькулятор

            .mortgage_filter
                .mortgage_col
                    .form_cell.select-box-v1._bordered
                        select.select2(data-dropdown-class='dropdown-v1' data-placeholder='Выбрать банк')
                            option
                            option Тинькофф
                            option Сбербанк

                .mortgage_col
                    .filterBlock
                        .form_cell.toddler_val_v2
                            .toddler-val.select_box_v3
                                span.btn_v2.filter_btn.text_left._wnw Первый взнос, руб.
                                span.start.btn_v2.filter_btn: input.f_input.input_v3.val(data-inputmask="'alias': 'decimal', 'groupSeparator': ' ', 'digitsOptional': true, 'autoGroup': true, 'rightAlign': false ")

                        .form_cell.toddler_v1._single
                            .filterToddler(data-format='money' data-single='true' data-min=0 data-max=5000000)
                        .toddler_range
                            .fl 100 000
                            .fr 2 500 000

                .mortgage_col
                    .filterBlock
                        .form_cell.toddler_val_v2
                            .toddler-val.select_box_v3
                                span.btn_v2.filter_btn.text_left._wnw Срок кредитования
                                span.start.btn_v2.filter_btn
                                    input.f_input.input_v3.val(data-inputmask="'alias': 'decimal', 'groupSeparator': '', 'digitsOptional': true, 'autoGroup': true, 'rightAlign': false ")
                                    span.plural(data-plural='год,года,лет')

                        .form_cell.toddler_v1._single
                            .filterToddler(data-single='true' data-min=1 data-max=20)
                        .toddler_range
                            .fl 1 год
                            .fr 20 лет

            .mortgage_filter
                .mortgage_col
                    p Общая сумма выплат
                    .flat_price 1 500 890 руб.
                .mortgage_col
                    p Ежемесячный платеж
                    .flat_payment 42 500 руб.
                .mortgage_col
                    p Плата за пользование кредитом
                    .flat_price 1 400 500 руб.


